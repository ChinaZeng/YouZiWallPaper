<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#242424"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/img_radius_rectangle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/iv_video"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="-17dp"
            android:src="@mipmap/ic_header_def" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_video"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_header"
            android:singleLine="true"
            android:text="个人昵称"
            android:textColor="#DFDFDF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_video_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_header"
            android:layout_below="@+id/iv_header"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:layout_marginBottom="8dp"
            android:text="视频说明视频说明视频说明视频说明"
            android:textColor="#DFDFDF"
            android:textSize="13dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>